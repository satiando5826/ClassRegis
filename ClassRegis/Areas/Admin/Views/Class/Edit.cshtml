@model ClassRegis.Models.ViewModel.ClassViewModel
@using ClassRegis.Extensions
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Class</h2>
<br /><br />

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Classes.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Classes.Name" class="form-control" />
            </div>
            <span asp-validation-for="Classes.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Classes.Rooms.Name"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Classes.roomId" asp-items="Model.Rooms.ToSelectListItem(Model.Classes.roomId)" class="form-control"></select>
                
            </div>
            <span asp-validation-for="Classes.Rooms.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Classes.Subjects"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Classes.subjectId" asp-items="Model.Subjects.ToSelectListItem(Model.Classes.subjectId)" class="form-control"></select>
            </div>
            <span asp-validation-for="Classes.Subjects.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Classes.Teachers"></label>
            </div>
            <div class="col-5">
                <input asp-for="Classes.Teachers.Name" readonly class="form-control" />
            </div>
            <span asp-validation-for="Classes.Teachers.Name" class="text-danger"></span>
        </div>
        <br />
       
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Edit" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}