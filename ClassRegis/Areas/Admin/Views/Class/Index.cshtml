@model IEnumerable<Classes>

<h2>Teacher/Class</h2>
<br /><br />
@*Room*@
<div class="row">
    <a asp-area="Admin" asp-controller="Class" asp-action="Create" class="btn btn-info">Create Class</a>
    &nbsp; &nbsp;
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-info">Back</a>
</div>

<br /><br />
<table class="table table-striped border">
    <tr class="table-info">
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Rooms)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Subjects)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Teachers)
        </th>
        <th>

        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.Name)
    </td>
    <td>
        @Html.DisplayFor(m => item.Rooms.Name)
    </td>
    <td>
        @Html.DisplayFor(m => item.Subjects.Name)
    </td>
    <td>
        @Html.DisplayFor(m => item.Teachers.Name)
    </td>
    <td></td>
    <td>
        <partial name="_TableButtonPartial" model="item.Id" />
    </td>

</tr>


    }

</table>

