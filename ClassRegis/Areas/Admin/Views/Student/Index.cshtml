@model IEnumerable<Students>

<h2>Admin/Teachers</h2>
<br /><br />

<div class="row">
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info">Create Student</a>
    &nbsp; &nbsp;
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-info">Back to Admin</a>
</div>

<br /><br />
<table class="table table-striped border">
    <tr class="table-info">
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Email)
        </th>
        <th>

        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Email)
            </td>
            <td></td>
            <td></td>
            @if (User.Identity.Name == item.Email)
            {
                <partial name="_TableButtonPartial" model="item.Id" />
            }
            else
            {
                <td></td>
            }


        </tr>


    }

</table>

